<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1>Rescates</h1>
</div>

<h1><%=request.location.country%></h1>
<table class="table table-responsive">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ninos</th>
      <th>Adultos</th>
      <th>Notas</th>
      <th>Telefono</th>
      <th>Status</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rescates.each do |rescate| %>
      <tr>
        <td><%= rescate.firstname %></td>
        <td><%= rescate.lastname %></td>
        <td><%= rescate.childs %></td>
        <td><%= rescate.adults %></td>
        <td><%= rescate.note %></td>
        <td><%= rescate.phone %></td>
        <td><%= rescate.status %></td>
        <td><%= Location.near([rescate.latitude, rescate.longitude],20)%></td>
        <td><%= rescate.latitude %></td>
        <td><%= rescate.longitude %></td>
        <td><%= link_to 'Ver', rescate %></td>
        <td><%= link_to 'Editar', edit_rescate_path(rescate) %></td>
        <td><%= link_to 'Eliminar', rescate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Pedir Ayuda', new_rescate_path %>
