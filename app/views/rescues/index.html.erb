<p id="notice"><%= notice %></p>

<h1>Rescates</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Niños</th>
      <th>Adultos</th>
      <th>Mas Información</th>
      <th>Telefono</th>
      <th>Status</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rescues.each do |rescue| %>
      <tr>
        <td><%= rescue.firstname %></td>
        <td><%= rescue.lastname %></td>
        <td><%= rescue.childs %></td>
        <td><%= rescue.adults %></td>
        <td><%= rescue.note %></td>
        <td><%= rescue.phone %></td>
        <td><%= rescue.status %></td>
        <td><%= rescue.latitude %></td>
        <td><%= rescue.longitude %></td>
        <td><%= link_to 'Show', rescue %></td>
        <td><%= link_to 'Edit', edit_rescue_path(rescue) %></td>
        <td><%= link_to 'Destroy', rescue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

